{
    "name": "desierai-desktop",
    "version": "1.0.0",
    "description": "DesierAI â€“ Screen-share-safe interview assistant",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "dev": "electron . --dev",
        "build": "electron-builder",
        "build:win": "electron-builder --win --x64",
        "clean-dist": "node clean-dist.js"
    },
    "build": {
        "appId": "com.desier.desktop",
        "productName": "DesierAI",
        "directories": {
            "output": "dist/${os}"
        },
        "mac": {
            "category": "public.app-category.productivity",
            "target": [
                "dmg",
                "zip"
            ]
        },
        "win": {
            "target": "nsis"
        },
        "files": [
            "**/*",
            "!dist/*"
        ]
    },
    "devDependencies": {
        "electron": "^29.0.0",
        "electron-builder": "^24.13.3"
    }
}